# Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# API Configuration
# Development: http://localhost:8080
# Production: https://api.tcdynamics.fr or your production backend URL
VITE_API_URL=http://localhost:8080

# Environment
VITE_NODE_ENV=development

# Feature Flags (optional)
VITE_FEATURE_ENABLE_ANALYTICS=false
VITE_FEATURE_ENABLE_DEBUG_LOGGING=true

# --- API (Vercel dev / serverless) - required for forms and DB ---
# Used when running: npm run dev (frontend + vercel dev) or vercel dev
# MongoDB Atlas connection string (required for contact/demo form submission)
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/dbname?retryWrites=true
# Optional: Turnstile (Cloudflare) or hCaptcha for form captcha
# TURNSTILE_SECRET_KEY=your_turnstile_secret
# Optional: Resend for contact/demo notification emails
# RESEND_API_KEY=re_xxxx
