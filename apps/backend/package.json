{
  "name": "tcdynamics-backend",
  "version": "1.0.0",
  "description": "Backend API pour TCDynamics",
  "license": "MIT",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --verbose",
    "test:integration": "node test-integration.js",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,ts}\" --config ../tools/configs/.prettierrc --ignore-path ../tools/configs/.prettierignore",
    "format:check": "prettier --check \"src/**/*.{js,ts}\" --config ../tools/configs/.prettierrc --ignore-path ../tools/configs/.prettierignore"
  },
  "dependencies": {
    "@tcd/shared-types": "*",
    "@tcd/shared-utils": "*",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^17.3.1",
    "express": "^4.22.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.36.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.13",
    "pg": "^8.19.0",
    "pino": "^8.19.0",
    "pino-http": "^8.6.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.59.0-alpha-1771260841000",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.19.12",
    "@types/nodemailer": "^7.0.10",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1-alpha.2",
    "@typescript-eslint/parser": "^8.56.1-alpha.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.3",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.14",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
