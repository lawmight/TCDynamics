# TCDynamics Frontend Environment Variables - For Vercel Deployment
# Copy this file to .env.local for local development
# Add these variables to your Vercel project settings

# ============================================
# REQUIRED FOR MVP
# ============================================

# API Configuration
# For Vercel serverless functions, use /api
# For external backend, use full URL like https://your-backend.onrender.com
VITE_API_URL=/api

# Stripe Configuration (REQUIRED for payments)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Add this to Vercel environment variables (not exposed to client)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Price IDs (from your Stripe Dashboard)
VITE_STRIPE_PRICE_STARTER=price_1SITt3PrdINvydiHc9MN33jF
VITE_STRIPE_PRICE_PROFESSIONAL=price_1SITtRPrdINvydiH0Kp0pgK2

# ============================================
# FEATURE FLAGS - Control what's enabled
# ============================================

# Core Features (Keep these enabled for MVP)
VITE_FEATURE_ENABLE_CONTACT_FORM=true
VITE_FEATURE_ENABLE_DEMO_FORM=true

# Defer Complex Features (Set to false for MVP)
VITE_FEATURE_ENABLE_AI_CHAT=false
VITE_FEATURE_ENABLE_AI_VISION=false
VITE_FEATURE_ENABLE_AZURE_FUNCTIONS=false

# Optional Features
VITE_FEATURE_ENABLE_ANALYTICS=false
VITE_FEATURE_ENABLE_DEBUG_LOGGING=false
VITE_FEATURE_ENABLE_CACHE=true

# ============================================
# APPLICATION SETTINGS
# ============================================

# Environment Configuration
VITE_NODE_ENV=production
VITE_APP_VERSION=1.0.0

# Frontend URL (Vercel will auto-set VERCEL_URL)
VITE_FRONTEND_URL=https://your-app.vercel.app

# ============================================
# OPTIONAL - Analytics (can add later)
# ============================================

# Google Analytics
# VITE_ANALYTICS_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Hotjar
# VITE_ANALYTICS_HOTJAR_ID=XXXXXXX

# ============================================
# PERFORMANCE & SECURITY (use defaults)
# ============================================

# Cache Settings
VITE_CACHE_MAX_SIZE=1000
VITE_CACHE_DEFAULT_TTL=300000
VITE_CACHE_CLEANUP_INTERVAL=300000

# Performance Monitoring
VITE_PERFORMANCE_ENABLE_SAMPLING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1
VITE_PERFORMANCE_MAX_METRICS=1000

# Security
VITE_SECURITY_CSP_STRICT=false
VITE_SECURITY_RATE_LIMIT_REQUESTS=100
VITE_SECURITY_RATE_LIMIT_WINDOW=60000

# ============================================
# FUTURE - Azure Functions (not needed for MVP)
# ============================================

# Azure OpenAI (for AI Chat)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_KEY=your_key_here
# AZURE_OPENAI_DEPLOYMENT=gpt-35-turbo

# Azure Vision (for AI Vision)
# AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
# AZURE_VISION_KEY=your_key_here

# Email Service (Zoho)
# ZOHO_EMAIL=your-email@domain.com
# ZOHO_PASSWORD=your_password_here

# Database
# COSMOS_CONNECTION_STRING=your_connection_string_here

# Admin
# ADMIN_KEY=your_32_character_admin_key_here

# Application Insights
# APPLICATIONINSIGHTS_CONNECTION_STRING=your_connection_string_here

# Azure Storage
# AzureWebJobsStorage=your_storage_connection_string_here