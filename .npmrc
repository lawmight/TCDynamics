# NPM Configuration for TCDynamics
# Security and dependency management settings

# Pin dependency versions to prevent unexpected updates
save-exact=true

# Use npm audit for security checks
audit-level=moderate

# Enable package-lock.json
package-lock=true

# Use npm ci for production installs
engine-strict=true

# Security settings
fund=false
audit=true

# Registry settings (use official npm registry)
registry=https://registry.npmjs.org/

# Cache settings
cache-min=3600
cache-max=86400

# Logging
loglevel=warn