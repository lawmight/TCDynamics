{
  "name": "tcdynamics-workspace",
  "version": "1.0.0",
  "description": "TCDynamics WorkFlowAI - AI-powered automation platform for French SMEs",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:functions": "cd apps/functions && func start",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend && npm run test:functions",
    "test:frontend": "cd apps/frontend && npm run test",
    "test:backend": "cd apps/backend && npm run test",
    "test:functions": "cd apps/functions && python -m pytest",
    "test:e2e": "cd tests/e2e && npm run test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd apps/frontend && npm run lint",
    "lint:backend": "cd apps/backend && npm run lint",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd apps/frontend && npm run format",
    "format:backend": "cd apps/backend && npm run format",
    "type-check": "npm run type-check:frontend && npm run type-check:backend",
    "type-check:frontend": "cd apps/frontend && npm run type-check",
    "type-check:backend": "cd apps/backend && npm run type-check",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd apps/frontend && rm -rf dist node_modules",
    "clean:backend": "cd apps/backend && rm -rf node_modules",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd apps/frontend && npm install",
    "install:backend": "cd apps/backend && npm install",
    "deploy": "npm run deploy:functions && npm run deploy:frontend",
    "deploy:functions": "cd apps/functions && func azure functionapp publish",
    "deploy:frontend": "cd apps/frontend && npm run build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.86.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2",
    "stripe": "^17.4.0"
  },
  "devDependencies": {
    "@typescript-eslint/scope-manager": "^8.48.1",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "autoprefixer": "^10.4.22",
    "caniuse-lite": "^1.0.30001655",
    "concurrently": "^8.2.2",
    "css-tree": "^2.3.1",
    "fast-xml-parser": "^4.3.6",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.1",
    "vite": "^7.2.6",
    "yaml": "^2.8.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
