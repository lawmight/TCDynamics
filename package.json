{
  "name": "tcdynamics-workspace",
  "version": "1.0.0",
  "description": "TCDynamics WorkFlowAI - AI-powered automation platform for French SMEs",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:vercel": "cd apps/frontend && vercel dev --listen 3001 --yes",
    "dev:functions": "echo \"Azure Functions archived - see apps/functions-archive/\"",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd apps/frontend && npm run test",
    "test:backend": "cd apps/backend && npm run test",
    "test:functions": "echo \"Azure Functions archived - see apps/functions-archive/\"",
    "test:e2e": "cd tests/e2e && npm run test",
    "test-this": "node tools/scripts/test-this.js",
    "test:watch": "cd apps/frontend && npm run test",
    "test:ui": "cd apps/frontend && npm run test:ui",
    "fix": "node tools/scripts/fix-current.js",
    "quick-check": "node tools/scripts/quick-check.js",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd apps/frontend && npm run lint",
    "lint:backend": "cd apps/backend && npm run lint",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd apps/frontend && npm run format",
    "format:backend": "cd apps/backend && npm run format",
    "type-check": "npm run type-check:frontend && npm run type-check:backend",
    "type-check:frontend": "cd apps/frontend && npm run type-check",
    "type-check:backend": "cd apps/backend && npm run type-check",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd apps/frontend && rm -rf dist node_modules",
    "clean:backend": "cd apps/backend && rm -rf node_modules",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd apps/frontend && npm install",
    "install:backend": "cd apps/backend && npm install",
    "deploy": "npm run deploy:frontend",
    "deploy:functions": "echo \"Azure Functions archived - see apps/functions-archive/\"",
    "deploy:frontend": "cd apps/frontend && npm run build",
    "deploy:vercel": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-vercel.ps1",
    "deploy:vercel:frontend": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-vercel-frontend-only.ps1",
    "ship": "powershell -ExecutionPolicy Bypass -File ./scripts/ship.ps1",
    "preview": "powershell -ExecutionPolicy Bypass -File ./scripts/ship.ps1 -Message \"chore: preview deployment\""
  },
  "dependencies": {
    "google-auth-library": "^9.14.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.3"
  },
  "devDependencies": {
    "@typescript-eslint/scope-manager": "^8.51.0",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "autoprefixer": "^10.4.23",
    "caniuse-lite": "^1.0.30001763",
    "concurrently": "^8.2.2",
    "css-tree": "^2.3.1",
    "fast-xml-parser": "^4.3.6",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.19",
    "terser": "^5.44.1",
    "vite": "^7.3.0",
    "yaml": "^2.8.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "rimraf": "^4.0.0",
    "glob": "^10.0.0",
    "@humanwhocodes/config-array": "npm:@eslint/config-array@^0.16.0",
    "@humanwhocodes/object-schema": "npm:@eslint/object-schema@^2.1.4"
  }
}
