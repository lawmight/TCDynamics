# Configuration serveur
PORT=3001
NODE_ENV=development

# Configuration email (Zoho Mail)
EMAIL_HOST=smtp.zoho.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@zoho.com
EMAIL_PASS=your-zoho-app-password

# Configuration sécurité
JWT_SECRET=votre_secret_jwt_tres_long_et_complexe
API_KEY=your-secure-api-key-for-admin-endpoints
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# URLs
FRONTEND_URL=http://localhost:8080
BACKEND_URL=http://localhost:3001

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:8080,https://yourdomain.com,https://www.yourdomain.com
