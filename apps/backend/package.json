{
  "name": "tcdynamics-backend",
  "version": "1.0.0",
  "description": "Backend API pour TCDynamics",
  "license": "MIT",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src/**/*.{js,ts}",
