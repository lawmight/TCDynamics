{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug React Frontend (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/apps/frontend/src",
      "sourceMaps": true,
      "preLaunchTask": "Frontend: Start Development Server",
      "sourceMapPathOverrides": {
        "/@fs/*": "${webRoot}/*",
        "/@vite/*": "${webRoot}/*",
        "/@id/*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///./*": "${webRoot}/*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      }
    },
    {
      "name": "Debug React Frontend (Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/apps/frontend/src",
      "sourceMaps": true,
      "preLaunchTask": "Frontend: Start Development Server",
      "sourceMapPathOverrides": {
        "/@fs/*": "${webRoot}/*",
        "/@vite/*": "${webRoot}/*",
        "/@id/*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///./*": "${webRoot}/*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      }
    },
    {
      "name": "Debug Node.js Backend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/backend",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/backend/dist/**/*.js"]
    },
    {
      "name": "Debug Node.js Backend (Attach)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "cwd": "${workspaceFolder}/apps/backend"
    },
    {
      "name": "Debug Vitest Tests (Frontend)",
      "type": "node",
      "request": "launch",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceFolder}/apps/frontend/node_modules/vitest/vitest.mjs",
      "args": [
        "run",
        "${relativeFile}",
        "--test-timeout=0",
        "--no-file-parallelism"
      ],
      "smartStep": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}/apps/frontend"
    },
    {
      "name": "Debug Jest Tests (Backend)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["test", "--", "--runInBand"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}/apps/backend",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Playwright Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test:e2e:debug"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/frontend",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Python Functions",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 9091
      },
      "preLaunchTask": "func: host start (debug)",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/TCDynamics",
          "remoteRoot": "${workspaceFolder}/TCDynamics"
        }
      ]
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Debug",
      "configurations": [
        "Debug React Frontend (Chrome)",
        "Debug Node.js Backend"
      ],
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      },
      "stopAll": true
    },
    {
      "name": "Frontend + Tests",
      "configurations": [
        "Debug React Frontend (Chrome)",
        "Debug Vitest Tests (Frontend)"
      ],
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 2
      },
      "stopAll": false
    }
  ]
}
